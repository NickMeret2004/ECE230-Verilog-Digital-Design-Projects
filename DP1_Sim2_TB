module sim_1tb;
    reg A, B, C;
    wire X, Y, Z;
    Sim2 inst0(.a(A), .b(B), .c(C), .x(X), .y(Y), .z(Z));
    initial
    begin
        #0 A=0; B=0; C=0;
        #100 A=0; B=0; C=1;
        #100 A=0; B=1; C=0;
        #100 A=0; B=1; C=1;
        #100 A=1; B=0; C=0;
        #100 A=1; B=0; C=1;
        #100 A=1; B=1; C=0;
        #100 A=1; B=1; C=1;
    end
endmodule
